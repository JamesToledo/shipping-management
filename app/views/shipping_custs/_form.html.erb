<section style="text-align:center">
  <div>
    <%= form_with model: @shipping_cust, data: { turbo: false } do |form| %>
      <div>
        <%= form.label :value %><br />
        <%= form.number_field :value, step: :any %>
        <% @shipping_cust.errors.full_messages_for(:value).each do |message| %>
          <div style="color:red"><%= message %></div>
        <% end %>
      </div>
      <div>
        <%= form.submit %>
      </div>
    <% end %>
  </div>
  <nav>
    <%= link_to 'cancelar', quotes_path %>
  </nav>
</section>
