<section style="text-align:center">
  <div>
    <%= form_with model: @budget, data: { turbo: false } do |form| %>
      <div>
        <%= form.label :min_size %> (m³)<br />
        <%= form.number_field :min_size, step: :any %>
        <% @budget.errors.full_messages_for(:min_size).each do |message| %>
          <div style="color:red"><%= message %></div>
        <% end %>
      </div>
      <div>
        <%= form.label :max_size %> (m³)<br />
        <%= form.number_field :max_size, step: :any %>
        <% @budget.errors.full_messages_for(:max_size).each do |message| %>
          <div style="color:red"><%= message %></div>
        <% end %>
      </div>
      <div>
        <%= form.label :min_weight %> (Kg)<br />
        <%= form.number_field :min_weight, step: :any %>
        <% @budget.errors.full_messages_for(:min_weight).each do |message| %>
          <div style="color:red"><%= message %></div>
        <% end %>
      </div>
      <div>
        <%= form.label :max_weight %> (Kg)<br />
        <%= form.number_field :max_weight, step: :any%>
        <% @budget.errors.full_messages_for(:max_weight).each do |message| %>
          <div style="color:red"><%= message %></div>
        <% end %>
      </div>
      <div>
        <%= form.label :range_price %> (R$)<br />
        <%= form.number_field :range_price, step: :any%>
        <% @budget.errors.full_messages_for(:range_price).each do |message| %>
          <div style="color:red"><%= message %></div>
        <% end %>
      </div>
      <div>
        <%= form.submit %>
      </div>
    <% end %>
  </div>
  <nav>
    <%= link_to 'cancelar', quotes_path %>
  </nav>
</section>
