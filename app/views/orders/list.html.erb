<% if current_user.role == 'admin' %>
  <%= render 'links/admin_links' %>
<% else %>
  <%= render 'links/links' %>
<% end %>
<div><h1>Ordens de Servi√ßo</h1></div>
<section>
  <div>
    <table style="width: 25%">
      <thead>
        <tr>
          <th style="text-align:center">Ordens</th>
          <th style="text-align:center">Status</th>
          <% if current_user.role == 'admin' %>
              <th style="text-align:center">Transpotadoras</th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td style="text-align:center"><%= order.code %></td>
            <td style="text-align:center"><%= I18n.t(order.status) %></td>
            <% if current_user.role == 'admin' %>
              <td style="text-align:center"><%= order.company.brand_name %></td>
            <% else %>
              <td style="text-align:center"><%= button_to 'detalhes', order, method: 'get' %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>
